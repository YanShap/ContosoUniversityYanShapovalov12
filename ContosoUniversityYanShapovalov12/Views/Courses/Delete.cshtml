@model ContosoUniversityYanShapovalov12.Models.Course

<h1>Delete Course</h1>

<div>
    <h4>Are you sure you want to delete this department?</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>

        <dt class="col-sm-2">Enrollments</dt>
        <dd class="col-sm-10">@Model.Enrollments</dd>
    </dl>
</div>

<form asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>