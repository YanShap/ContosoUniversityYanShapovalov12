@model ContosoUniversityYanShapovalov12.Models.Course

@{
    var isDeleteView = ViewData["IsDeleteView"] as bool? ?? false;
    ViewData["Title"] = isDeleteView ? "Delete Course" : "Course Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>

        <dt class="col-sm-2">Enrollments</dt>
        <dd class="col-sm-10">@Model.Enrollments</dd>
    </dl>
</div>

<div>
    @if (isDeleteView)
    {
            <form asp-action="Delete" asp-route-id="@Model.CourseID" method="post">
                <p>Are you sure you want to delete this course?</p>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
    }
    else
    {
            <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-primary">Edit</a>
            <a asp-action="Clone" asp-route-id="@Model.CourseID" class="btn btn-secondary">Clone</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    }
</div>
