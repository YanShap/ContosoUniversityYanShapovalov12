@model ContosoUniversityYanShapovalov12.Models.Department

<h2>Delete Department</h2>
<div>
    <h4>Are you sure you want to delete this department?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Budget</dt>
        <dd class="col-sm-10">@Model.Budget</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Aadress</dt>
        <dd class="col-sm-10">@Model.Aadress</dd>
    </dl>
</div>
<form asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>